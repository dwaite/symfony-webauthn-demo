{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('signin') }}
{% endblock %}

{% block main_content %}
    <div class="container">
        <div class="row py-5">
            <div class="col-md-6 ml-auto mr-auto">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Sign in form</h2>
                        <div class="row">
                            <div class="col-md-12 ml-auto">
                                <form method="post" class="form">
                                    <div class="form-group">
                                        <label for="_username" class="bmd-label-floating">Username</label>
                                        <input type="text" value="{{ last_username }}" class="form-control{% if error %} is-invalid{% endif %}" id="_username" name="_username" required autofocus>
                                        {% if error %}
                                            <div class="invalid-feedback">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                        {% endif %}
                                    </div>
                                    <div class="form-group">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" name="_remember_me" id="_remember_me"> Remember me
                                            </label>
                                        </div>
                                    </div>
                                    <input type="hidden" name="_csrf_token" id="_csrf_token" value="{{ csrf_token('authenticate') }}">

                                    <div class="form-group">
                                        <a href="{{ path('app_home') }}" class="btn btn-default">Cancel</a>
                                    <button class="btn btn-primary btn-raised" type="submit">Sign in!</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('signin') }}
{% endblock %}
